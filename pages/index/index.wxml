<view class="page">
    <scroll-view scroll-y="true" enable-back-to-top="true" style="height:{{usefulWindowHeight}}px">
    <!-- <scroll-view scroll-y="true" style="height:{{usefulWindowHeight}}px"> -->
      <!-- 顶部状态栏去掉 -->
