/* 贴底 */
.operate-bar{
  z-index: 1001; 
  position: fixed;
  bottom: 0rpx;
  height:80rpx;
  width:100%;
  display: flex;
  padding: 25rpx 0rpx 30rpx 25rpx;
  background-color: transparent;
}

.addTodoInput{
  width: 660rpx;
  height:80rpx; 
  font-size: 30rpx;
  color: #434343;
  border-radius: 20rpx;
  /* border: 4rpx solid white; */
  box-shadow: 0 2rpx 0 rgba(255,255,255,0.24), 0 2rpx 12rpx rgba(0,0,0,0.45);
  background-color: white;
  /* padding-bottom: 20rpx; */
  padding-left: 40rpx;
}

.placeholder{
  margin-left: -24rpx;
  margin-top: 0rpx;
  font-size: 30rpx;
  color: rgb(150, 150, 150);
  text-align: center;
  font-weight: bold;
}

.cut-bar{
  height:40rpx; 
  position: fixed;
  bottom:110rpx;
  width:100%;
  color:red;
  font-size:24rpx;
  text-align:center;
}

/* 待办事项样式 */
.card{

}

.weui-cells::before {
  border: 0rpx;
}
.weui-cells::after {
  border: 0rpx;
}

.weui-cell::before {
  border: 0rpx;
}
.weui-cell {
  width: 650rpx;
  background-color: white;
  border: 1rpx solid gainsboro;
  border-left: 12rpx solid #3cc3bb;
  border-radius: 10rpx;
  box-shadow: 0 1px 2px rgba(0,0,0,0.07);
  padding-left: 30rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 30rpx;
  margin-bottom: -20rpx;
}

.weui-cells{
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
}

.weui-cell-done {
  background-color: gainsboro;
  border: 0rpx solid gainsboro;
  border-left: 12rpx solid gainsboro;
}

.weui-cells-done {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  color: #8a8a8a;
}

.weui-cell__ft {
  color: #ff7e0c;
}
